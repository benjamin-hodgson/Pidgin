{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "taskName": "build",
      "command": "dotnet",
      "args": [
        "build"
      ],
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "taskName": "test",
      "command": "dotnet",
      "type": "shell",
      "args": [
        "test",
        "${workspaceRoot}/Pidgin.Tests/Pidgin.Tests.csproj"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },

      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    }
  ]
}